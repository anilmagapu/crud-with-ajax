<%if @reviews.blank? %>
You Are not given Reviews
<%else%>

<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.description %></td>
    <td><%= review.rating %></td>
     <% @p= Product.where(:id=>review.product_id).first %>
       
    <td><%= @p.name %></td>

    <td><%= link_to 'Show', review %></td>
    <%if review.user_id == current_user.id  %>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
    
  </tr>
<% end %>
</table>

<br />
<%end%>
